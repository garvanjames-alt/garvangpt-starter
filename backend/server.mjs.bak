// backend/server.mjs
import express from "express";
import cors from "cors";
import path from "path";
import { fileURLToPath } from "url";
import dotenv from "dotenv";

// Load env from backend/.env
const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);
dotenv.config({ path: path.join(__dirname, ".env") });

// ---- Routers / handlers ----
import { searchRouter } from "./routes/search.mjs"; // <- our new RAG search route
// respondHandler is CommonJS; import it lazily so Node can interop cleanly.
const { handler: respondHandler } = await import("./respondHandler.cjs");

// ---- App setup ----
const app = express();
const PORT = Number(process.env.PORT || 3001);

// CORS + JSON
app.use(
  cors({
    origin: true,            // allow browser origins during dev
    credentials: true,       // carry cookies if you use them elsewhere
  })
);
app.use(express.json({ limit: "1mb" }));

// ---- Health ----
app.get("/health", (req, res) => {
  res.json({ ok: true, env: process.env.NODE_ENV || "local" });
});

// ---- RAG search (GET /api/search?q=...&k=5) ----
app.use("/api", searchRouter);

// ---- Respond (POST /api/respond {prompt}) ----
app.post("/api/respond", respondHandler);

// ---- Static (optional) ----
app.use(express.static(path.join(__dirname, "..", "frontend")));

// ---- Start ----
app.listen(PORT, () => {
  console.log(`Backend listening on http://localhost:${PORT}`);
});
